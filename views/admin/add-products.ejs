const imageInput = document.getElementById('image-input');
// Get the preview container element
const imagePreviewContainer = document.getElementById('image-preview-container');
// Listen for the file selection event
imageInput.addEventListener('change', function() {
  // Remove any existing previews
  imagePreviewContainer.innerHTML = '';
  // Loop through each selected file
  for (const file of this.files) {
    // Create a new image element
    const image = document.createElement('img');
    image.style.width = '100px';
    // Set the source of the image to the file object
    image.src = URL.createObjectURL(file);
    // Append the image element to the preview container
    imagePreviewContainer.appendChild(image);
  }
});
  </script>






<script>


const form = document.getElementById("form1");
const productNameInput = document.getElementById("productName");
const brandInput = document.getElementById("brand");
const priceInput = document.getElementById("price");
const quantityInput = document.getElementById("quantity");
const sizeInput = document.getElementById("size");
const imageInput1 = document.getElementById("image-input");
const descriptionInput = document.getElementById("description");
const categoryInput = document.getElementById("category");

form.addEventListener("submit", function (event) {
  let isValid = true;

  // Product name validation
  if (productNameInput.value.trim() === " ") {
    productNameInput.nextElementSibling.textContent = "Please enter a product name.";
    isValid = false;
  } else {
    productNameInput.nextElementSibling.textContent = "";
  }

  // Brand validation
  if (brandInput.value.trim() === "") {
    brandInput.nextElementSibling.textContent = "Please enter a brand name.";
    isValid = false;
  } else {
    brandInput.nextElementSibling.textContent = "";
  }

  // Price validation
  const priceRegex = /^\d+(\.\d{1,2})?$/;
  if (!priceRegex.test(priceInput.value.trim())) {
    priceInput.nextElementSibling.textContent = "Please enter a valid price.";
    isValid = false;
  } else {
    priceInput.nextElementSibling.textContent = "";
  }

  // Quantity validation
  const quantityRegex = /^[1-9]\d*$/;
  if (!quantityRegex.test(quantityInput.value.trim())) {
    quantityInput.nextElementSibling.textContent = "Please enter a valid quantity.";
    isValid = false;
  } else {
    quantityInput.nextElementSibling.textContent = "";
  }

  // Size validation
  if (sizeInput.value.trim() === "") {
    sizeInput.nextElementSibling.textContent = "Please enter a size.";
    isValid = false;
  } else {
    sizeInput.nextElementSibling.textContent = "";
  }

  // Image validation
  if (imageInput1.files.length === 0) {
    document.getElementById("imageError").textContent = "Please select an image.";
    isValid = false;
  } else {
    const allowedExtensions = /(\.jpg|\.jpeg|\.png|\.gif|\.webp)$/i;
    const fileSizeLimit = 2 * 1024 * 1024; // 2MB
    const file = imageInput1.files[0];
    if (!allowedExtensions.exec(file.name)) {
      document.getElementById("imageError").textContent = "Invalid file type. Please select an image file.";
      isValid = false;
    } else if (file.size > fileSizeLimit) {
      document.getElementById("imageError").textContent = "File size too large. Please select an image file under 2MB.";
      isValid = false;
    } else {
      document.getElementById("imageError").textContent = "";
    }
  }

  // Description validation
  if (descriptionInput.value.trim() === "") {
    descriptionInput.nextElementSibling.textContent = "Please enter a description.";
    isValid = false;
  } else {
    descriptionInput.nextElementSibling.textContent = "";
  }

  // Category validation
  if (categoryInput.selectedIndex === 0) {
    categoryInput.nextElementSibling.textContent = "Please select a category.";
    isValid = false;
  } else {
    categoryInput.nextElementSibling.textContent = "";
  }

  if (!isValid) {
    event.preventDefault();
  }
});

</script>
