<script>
    $(document).ready(function() {
      // add event listener for form submission
      $("#form").submit(function(event) {
        // prevent default form submission behavior
        event.preventDefault();
  
        // get form input values
        var couponName = $("#couponName").val().trim();
        var couponCode = $("#couponCode").val().trim();
        var startDate = $("#startDate").val().trim();
        var endDate = $("#endDate").val().trim();
        var minAmount = $("#minAmount").val().trim();
        var minDiscount = $("#minDiscount").val().trim();
        var maxDiscount = $("#maxDiscount").val().trim();
  
        // set error flag and clear any existing error messages
        var hasError = false;
        $(".error").text("");
  
        // validate coupon name
        if (couponName == "") {
          $("#couponName").siblings(".error").text("Please enter a coupon name.");
          hasError = true;
        }
  
        // validate coupon code
        if (couponCode == "") {
          $("#couponCode").siblings(".error").text("Please enter a coupon code.");
          hasError = true;
        }
  
        // validate start date
        if (startDate == "") {
          $("#startDate").siblings(".error").text("Please select a start date.");
          hasError = true;
        }
  
        // validate end date
        if (endDate == "") {
          $("#endDate").siblings(".error").text("Please select an end date.");
          hasError = true;
        } else if (endDate < startDate) {
          $("#endDate").siblings(".error").text("End date must be after start date.");
          hasError = true;
        }
  
        // validate minimum amount
        if (minAmount == "") {
          $("#minAmount").siblings(".error").text("Please enter a minimum amount.");
          hasError = true;
        } else if (isNaN(minAmount) || parseFloat(minAmount) <= 0) {
          $("#minAmount").siblings(".error").text("Minimum amount must be a positive number.");
          hasError = true;
        }
  
        // validate minimum discount
        if (minDiscount == "") {
          $("#minDiscount").siblings(".error").text("Please enter a minimum discount.");
          hasError = true;
        } else if (isNaN(minDiscount) || parseFloat(minDiscount) < 0) {
          $("#minDiscount").siblings(".error").text("Minimum discount must be a non-negative number.");
          hasError = true;
        }
  
        // validate maximum discount
        if (maxDiscount == "") {
          $("#maxDiscount").siblings(".error").text("Please enter a maximum discount.");
          hasError = true;
        } else if (isNaN(maxDiscount) || parseFloat(maxDiscount) < parseFloat(minDiscount)) {
          $("#maxDiscount").siblings(".error").text("Maximum discount must be a number greater than or equal to the minimum discount.");
          hasError = true;
        }
  
        // if no errors, submit the form
        if (!hasError) {
          this.submit();
        }
      });
    });
  </script>
  

