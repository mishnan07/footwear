<script type="text/javascript">
  const form = document.getElementById('form1')
  const name1 = document.getElementById('productName')
  const brand1 = document.getElementById('brand')
  const price1 = document.getElementById('price')
  const stock1 = document.getElementById('quantity')
  const size1 = document.getElementById('size')
  const category1 = document.getElementById('category')
  const description1 = document.getElementById('description')


  const seterror = (element, message) => {
    const inputControll = element.parentElement;
    const errorDisplay = inputControll.querySelector('.error')

    errorDisplay.innerText = message
    inputControll.classList.add('error')
    inputControll.classList.remove('success')
  }
  const setSuccess = (element) => {
    const inputControll = element.parentElement;
    const errorDisplay = inputControll.querySelector('.error')

    errorDisplay.innerText = ''
    inputControll.classList.remove('success')
    inputControll.classList.add('error')
  }

  form.addEventListener('submit', e => {
    const productname = name1.value.trim()
    const productbrand = brand1.value.trim()
    const productprice = price1.value.trim()
    const productstock = stock1.value.trim()
    const productsize = size1.value.trim()
    const productcategory = category1.value.trim()
    const productdescription=description1.value.trim()

    if (productname == '') {
      seterror(name1, 'this field is required')
      e.preventDefault()
    } else {
      setSuccess(name1)
    }
    //////////////////////
    if (productbrand == '') {
      seterror(brand1, 'this field is required')
      e.preventDefault()
    } else {
      setSuccess(brand1)
    }
    //////////////////////
    if (productprice == '') {
      seterror(price1, 'this field is required')
      e.preventDefault()
    } else if (productprice <= 0) {
      seterror(price1, 'invalid input')
      e.preventDefault()
    } else if (isNaN(productprice)) {
      seterror(price1, 'must be a number')
      e.preventDefault()
    } else {
      setSuccess(price1)
    }
     //////////////////////
     if (productsize == '') {
      seterror(size1, 'this field is required')
      e.preventDefault()
    } else if (productsize <= 0) {
      seterror(size1, 'invalid input')
      e.preventDefault()
    } else if (isNaN(productsize)) {
      seterror(size1, 'must be a number')
      e.preventDefault()
    } else {
      setSuccess(size1)
    }
    ///////////////////////
    if (productstock == '') {
      seterror(stock1, 'this field is required')
      e.preventDefault()
    } else if (productstock <= 0) {
      seterror(stock1, 'invalid input')
      e.preventDefault()
    } else if (isNaN(productstock)) {
      seterror(stock1, 'must be a number')
      e.preventDefault()
    } else {
      setSuccess(stock1)
    }

    ///////////////////////


    if (productdescription == '') {
      seterror(description1, 'this field is required')
      e.preventDefault()
    } else {
      setSuccess(description1)
    }
    ////////////////////////
    if (productcategory == '') {
      seterror(category1, 'this field is required')
      e.preventDefault()
    } else {
      setSuccess(category1)
    }

  })
</script>


 
<script>
  // Get the file input element
const imageInput = document.getElementById('image-input');
// Get the preview container element
const imagePreviewContainer = document.getElementById('image-preview-container');
// Listen for the file selection event
imageInput.addEventListener('change', function() {
// Remove any existing previews
imagePreviewContainer.innerHTML = '';
// Loop through each selected file
for (const file of this.files) {
  // Create a new image element
  const image = document.createElement('img');
  image.style.width = '100px';
  // Set the source of the image to the file object
  image.src = URL.createObjectURL(file);
  // Append the image element to the preview container
  imagePreviewContainer.appendChild(image);
}
});
</script>




