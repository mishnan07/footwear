 <script>
  function validateForm() {
    var street = document.forms["form1"]["street"].value;
    var city = document.forms["form1"]["city"].value;
    var state = document.forms["form1"]["state"].value;
    var zipCode = document.forms["form1"]["zipCode"].value;

    if (street == "") {
      document.getElementById("street-error").innerHTML = "Please enter a street.";
      return false;
    }

    if (city == "") {
      document.getElementById("city-error").innerHTML = "Please enter a city.";
      return false;
    }

    if (state == "") {
      document.getElementById("state-error").innerHTML = "Please enter a state.";
      return false;
    }

